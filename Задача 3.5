    {
        for (int j =0; j<100; j++)
        {
            if (abs(massiv[i])==abs(dif[j]))
            {
                massiv[i]=a+rand()%((b+1)-a);
                cot++;
            };
        };
        //cout<<"cot = "<<cot<<endl<<"i = "<<i<<endl;
    };
    }
    while (cot!=0);
