#include <iostream>
#include <cstdlib>
#include <cmath>

using namespace std;
int massiv [100], dif[100],cot=0,a=-1000,b=1000,high;

int main()
{
    setlocale(LC_ALL,"rus");
    for (int i =0; i<100; i+=2)
    {
        massiv[i]=a+rand()%((b+1)-a);
        //massiv [i+1] = (-1)*rand() %1000;
    };
    for (int i =0; i<100; i++)
    {
        dif[i]=massiv[i];
    };
    do
    {
        cot=0;
