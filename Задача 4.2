//Задание: Вычислить сумму модулей элементов массива, расположенных сразу за первым отрицательным числом

#include <iostream>
#include <cstdlib>
#include <cmath>

using namespace std;
int massiv [100],sum;


int main()
{
    for (int i =0; i<99; i+=2)
    {
        massiv[i]=rand() %1000;
        massiv [i+1] = (-1)*rand() %1000;
    };

    for (int num = 0; num<100; num++)
    {
        if (massiv[num]<0)
        {
            for (int i = num+1;i<100; i++)
            {
                sum+=abs(massiv[i]);
                //cout <<"massiv[i] = "<<massiv[i]<<endl<<"sun = "<<sum<<endl;
            };
            break;
        };
    };
    cout <<sum;
    return 0;
}
