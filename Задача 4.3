//Задача: Найти сумму всех цифр целочисленного массива

#include <iostream>
#include <cstdlib>
#include <cmath>

using namespace std;
int massiv [100],sum=0;


int main()
{
    for (int i =0; i<99; i+=2)
    {
        massiv[i]=rand() %1000;
        massiv [i+1] = (-1)*rand() %1000;
    };

    /*int k=456;
    while (k>0)
    {
        sum+=k%10;
        k=k/10;
    }*/
    for (int i = 0; i<100;i++)
    {
        while (abs(massiv[i])>0)
        {
            sum+=abs(massiv[i]%10);
            massiv[i]=massiv[i]/10;
        };
    };
    cout <<sum;
    return 0;
}
